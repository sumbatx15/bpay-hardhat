    "@typechain/hardhat": "^8.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "chai": "^4.2.0",
    "concurrently": "^8.2.2",
    "ethers": "^6.8.0",
    "hardhat": "^2.18.2",
